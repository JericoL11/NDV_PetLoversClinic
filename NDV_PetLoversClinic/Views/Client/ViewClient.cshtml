@model NDV_PetLoversClinic.ViewModel.Records.ClientVm
@{
    ViewData["Title"] = "View Client";
}

<style>
    .form-control{
        text-align:center;
        margin-bottom:15px;
    }
</style>

<div class="bg-secondary bg-opacity-10 mb-3 py-2">
    <div class="container">
        <h1>Client Information</h1>
    </div>
</div>


<div class="container">


    <div class="card text-center">
    <div class="card-header">
        Client/Owner
    </div>
    <div class="card-body">
        <div class="row ">
            <div class="form-group col-lg-3 col-sm-6">
                <label class="control-label"> Full Name</label>
                <input value="@Model.FullName" class="form-control" readonly />
            </div>

            <div class="form-group col-lg-3 col-sm-6">
                <label class="control-label"> Gender</label>
                <input value="@Model.Person.gender" class="form-control" readonly />
            </div>

            <div class="form-group col-lg-2 col-sm-6">
                <label class="control-label"> Age </label>
                <input value="@Model.Age" class="form-control" readonly />
            </div>

            <div class="form-group col-lg-3 col-sm-6">
                <label class="control-label"> Birth Date</label>
                <input value="@Model.Person.bdate?.ToString("MMM. dd, yyyy")" class="form-control" readonly />
            </div>

            <div class="form-group col-lg-3 col-sm-6">
                <label class="control-label">Address</label>
                <input value="@Model.Person.address" class="form-control" readonly />
            </div>

            <div class="form-group col-lg-3 col-sm-6">
                <label class="control-label">Contact #</label>
                <input value="@Model.Contact" class="form-control" readonly />
            </div>

            <div class="form-group col-lg-3 col-sm-6">
                <label class="control-label">Email #</label>
                <input value="@Model.Person.email" class="form-control" readonly />
            </div>
        </div>
    </div>

</div>
    <div class="card text-center">
        <div class="card-header">
            Pet
        </div>
        <div class="card-body">
           <table class="table">
               <thead>
                   <tr>
                        <th>Pet Name</th>
                        <th>Specie</th>
                        <th>Breed</th>
                        <th>Birth Date</th>
                        <th>Age</th>
                   </tr>
               </thead>
           </table>
        </div>

    </div>

</div>